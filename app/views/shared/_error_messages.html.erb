<% if @user.errors.any? %>
  <div id="error_explanation">
    <div style="color:red">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul style="color:red">
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>